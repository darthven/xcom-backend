{
    "name": "xcom-backend",
    "version": "1.0.0",
    "description": "xcom backend node.js app",
    "scripts": {
        "setup": "src/bin/setup.sh",
        "build": "tsc -p .",
        "start:debug": "env-cmd .env ts-node ./lib/bin/index.js",
        "start:dev": "env-cmd .env pm2 startOrReload ecosystem.config.js",
        "start:prod": "env-cmd .env.prod pm2 startOrReload ecosystem.config.js",
        "db:init:dev": "env-cmd .env ts-node src/bin/initializeDB.ts",
        "db:init:prod": "env-cmd .env.prod ts-node src/bin/initializeDB.ts",
        "fs:init:dev": "env-cmd .env ts-node src/bin/createUsefulFolders.ts && npm run types:fix",
        "fs:init:prod": "env-cmd .env.prod ts-node src/bin/createUsefulFolders.ts && npm run types:fix",
        "test": "NODE_ENV=test mocha -r ts-node/register test/**/**/*.spec.ts --exit",
        "types:fix": "cp ./data/@types/mongodb/index.d.ts ./node_modules/@types/mongodb/",
        "lint": "tslint -p .",
        "lint:fix": "tslint --fix -p .",
        "lint:check": "tslint-config-prettier-check ./tslint.json",
        "script:dev": "env-cmd .env ts-node src/bin/runScript.ts",
        "script:prod": "env-cmd .env.prod ts-node src/bin/runScript.ts",
        "schedule:dev": "src/bin/schedulesync.sh dev",
        "schedule:prod": "src/bin/schedulesync.sh prod"
    },
    "keywords": [
        "backend",
        "API",
        "appshop",
        "appshopdev",
        "app development shop"
    ],
    "license": "MIT",
    "author": "Alexander Stepanov",
    "homepage": "https://github.com/AppDevelopmentShop/xcom-backend",
    "main": "lib/index.js",
    "engines": {
        "node": "10.1.0"
    },
    "bugs": {
        "url": "https://github.com/AppDevelopmentShop/push-dervice-client/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/AppDevelopmentShop/xcom-backend.git"
    },
    "devDependencies": {
        "@types/app-root-path": "^1.2.4",
        "@types/basic-auth": "^1.1.2",
        "@types/bcrypt": "^3.0.0",
        "@types/chai": "^4.1.7",
        "@types/ftp": "^0.3.29",
        "@types/google-libphonenumber": "^7.4.17",
        "@types/koa": "^2.0.46",
        "@types/koa-bodyparser": "^5.0.1",
        "@types/koa-router": "^7.0.33",
        "@types/mocha": "^5.2.5",
        "@types/mongodb": "^3.1.14",
        "@types/node": "^10.12.5",
        "@types/node-schedule": "^1.2.2",
        "@types/request": "^2.48.1",
        "@types/request-promise-native": "^1.0.15",
        "@types/sharp": "^0.17.10",
        "@types/sinon": "^5.0.5",
        "@types/supertest": "^2.0.6",
        "chai": "^4.2.0",
        "env-cmd": "^8.0.2",
        "mocha": "^5.2.0",
        "prettier": "^1.15.2",
        "sinon": "^6.3.5",
        "supertest": "^3.3.0",
        "ts-node": "^7.0.1",
        "tslint": "^5.11.0",
        "tslint-config-prettier": "^1.15.0",
        "tslint-plugin-prettier": "^1.3.0",
        "typescript": "^3.1.6"
    },
    "dependencies": {
        "app-root-path": "^2.1.0",
        "axios": "^0.21.1",
        "basic-auth": "^2.0.1",
        "bcrypt": "^3.0.2",
        "csvtojson": "^2.0.8",
        "ftp": "^0.3.10",
        "google-libphonenumber": "^3.1.15",
        "httpntlm": "^1.7.6",
        "kcors": "^2.2.2",
        "koa": "^2.6.2",
        "koa-better-http-proxy": "^0.2.4",
        "koa-bodyparser": "^4.2.1",
        "koa-multer": "^1.0.2",
        "koa-router": "^7.4.0",
        "mongodb": "^3.1.9",
        "node-schedule": "^1.3.0",
        "reflect-metadata": "^0.1.12",
        "request": "^2.88.0",
        "request-promise-native": "^1.0.5",
        "routing-controllers": "^0.7.7",
        "sharp": "^0.20.8",
        "typedi": "^0.8.0",
        "winston": "^3.1.0",
        "xml-js": "^1.6.8"
    }
}
